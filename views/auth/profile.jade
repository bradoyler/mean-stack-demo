extends ../layout

block body
  .container
    .row
      .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        .panel.panel-default
          .panel-heading.clearfix
            h1.panel-title Profile 
          .panel-body
             form.form-horizontal(role="form", action="/profile", method="post")
              .form-group
                label.col-sm-2.control-label(for="profilePhone") Phone:
                .col-sm-10
                  input.form-control(type="text", id="profilePhone", name="phone", placeholder="enter your mobile #", value=phone)
              .form-group
                .col-sm-offset-2.col-sm-10
                  button.btn.btn-default(type="submit") Update

        a.pull-left.btn.btn-default(href='/')
            i.fa.fa-list  TODOs 
        a.pull-right.btn.btn-default(href='/logout')
            i.fa.fa-power-off  Logout 
